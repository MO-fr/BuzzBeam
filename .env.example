# Authentication
NEXTAUTH_SECRET=your_random_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# MongoDB Configuration
NODE_ENV=development

# Development MongoDB URI (local instance)
MONGODB_URI_DEVELOPMENT=mongodb://localhost:27017/social-media-dashboard

# Production MongoDB URI (MongoDB Atlas or other hosting)
MONGODB_URI_PRODUCTION=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/social-media-dashboard?retryWrites=true&w=majority